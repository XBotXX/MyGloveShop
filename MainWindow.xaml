<Window x:Class="MyGloveShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGloveShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Border Background="#B3F4E9"/>
        <Label Content="ООО &quot;Одежда для ручек&quot;" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="Candara"/>
        <Image Source="Resources/Одежда для ручек.png" HorizontalAlignment="Left" Margin="5,5,0,5"/>
        <Button x:Name="BackBtn" Content="Back" HorizontalAlignment="Right" Margin="0,0,5,0" Width="150" Height="25" Click="BackBtn_Click" Background="#A5E887" FontFamily="Candara"/>
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"/>
        <Border Background="#B3F4E9" Grid.Row="2"/>
    </Grid>
</Window>
